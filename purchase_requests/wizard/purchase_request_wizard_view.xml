<odoo>
    <data>
        <record id="view_purchase_request_wizard_form" model="ir.ui.view">
            <field name="name">purchase_requests_wizard</field>
            <field name="model">purchase.requests.reject.wizard</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="rejection_reason"/>
                        </group>
                    </sheet>
                    <footer>
                        <button name="action_reject_request" type="object" string="Confirm" class="btn-primary"/>
                        <button string="Cancel" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
    </data>
</odoo>